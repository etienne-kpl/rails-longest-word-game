<h1>New game</h1>
<ul class="ul-clean">
<% @letters.each do |letter| %>
  <li class="letter"><%= letter %></li>
<% end %>
</ul>
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%# Fait passer la valeur de letters dans le score, avec params[:letters] %>
  <%= hidden_field_tag :letters, @letters %>
  <label for="word">What is the longest word you can find?</label>
  <input type="text" name="word" id="word">
  <input type="submit" value="Play">
</form>
